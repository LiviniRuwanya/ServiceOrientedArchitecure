            "header": [
              {
                "key": "Content-Type",
                "value": "text/xml"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "<soapenv:Envelope xmlns:soapenv=\"http://schemas.xmlsoap.org/soap/envelope/\" xmlns:ws=\"http://ws.bookcatalog.example.com/\">\n   <soapenv:Header/>\n   <soapenv:Body>\n      <ws:listBooks>all</ws:listBooks>\n   </soapenv:Body>\n</soapenv:Envelope>"
            },
            "url": {
              "raw": "http://localhost:8081/services",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8081",
              "path": ["services"]
            }
          }
        }
