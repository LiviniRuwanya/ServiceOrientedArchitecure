            },
            "url": {
              "raw": "http://localhost:8085/uddi/register",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8085",
              "path": ["uddi", "register"]
            }
          }
        },
        {
          "name": "List All Services",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8085/uddi/services",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8085",
              "path": ["uddi", "services"]
